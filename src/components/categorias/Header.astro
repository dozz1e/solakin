---
const { titulo, descripcion } = Astro.props;
---

<div class="hero bg-sky-600 h-80 rounded-lg my-4">
  <div class="hero-content text-center">
    <div class="max-w-2xl">
      <h1 class="text-5xl font-bold text-white">{titulo}</h1>
      <p class="py-6 text-lg text-gray-200">
        {descripcion}
      </p>
    </div>
  </div>
</div>
