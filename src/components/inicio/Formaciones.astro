---
import Container from "@layouts/Container.astro";
import { masoterapia, salud, marketing, online } from "@lib/cursos.ts";
import {
  ArrowRight,
  CircuitBoard,
  BookHeart,
  ChartSpline,
  HandHeart,
} from "lucide-astro";

const formaciones = [
  {
    name: "Masoterapia",
    color: "oklch(58.8% 0.158 241.966)",
    borderColor: "border-sky-600",
    slug: "masoterapia",
  },
  {
    name: "Salud",
    color: "oklch(49.1% .27 292.581)",
    borderColor: "border-violet-600",
    slug: "salud",
  },
  {
    name: "Marketing",
    color: "oklch(70.7% 0.165 254.624)",
    borderColor: "border-blue-400",
    slug: "marketing",
  },
  {
    name: "Formaciones Online",
    color: "oklch(70.4% 0.04 256.788)",
    borderColor: "border-slate-400",
    slug: "online",
  },
];
---

<Container>
  <div id="formaciones" class="pb-24">
    <h2 class="text-6xl font-bold pb-10 text-center">Nuestras Formaciones</h2>
    <ul
      class="my-2 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-2 xl:gap-4"
    >
      {
        formaciones.map((formacion, i) => (
          <li
            class={`col-span-1 shadow-md rounded-md border-4 bg-neutral-50 hover:bg-neutral-100 transition-colors hover:shadow-xl ${formacion.borderColor}`}
          >
            <a
              href={`/categorias/${formacion.slug}`}
              class="flex justify-between items-center p-4"
            >
              <div class="flex items-center gap-4">
                <div
                  class="flex items-center rounded-full w-12 h-12 justify-center text-white"
                  style={{
                    backgroundColor: formacion.color,
                  }}
                >
                  {i === 0 ? <HandHeart /> : null}
                  {i === 1 ? <BookHeart /> : null}
                  {i === 2 ? <ChartSpline /> : null}
                  {i === 3 ? <CircuitBoard /> : null}
                </div>
                <div class="flex items-center text-xl">{formacion.name}</div>
              </div>
              <div class="flex items-center">
                <ArrowRight color={formacion.color} />
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Container>
