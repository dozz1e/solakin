---
import Container from "@layouts/Container.astro";
import { menu } from "@lib/menu.ts";
import Buscador from "@components/Buscador.astro";
---

<div>
  <div class="top-0 z-10 fixed bg-base-100 shadow-md w-full navbar">
    <Container className="flex">
      <div class="navbar-start">
        <a href="/" class="hidden lg:block text-xl">
          <img src="/images/banner_ng.svg" alt="Logo Cenakin" class="w-30" />
        </a>
        <div class="hidden lg:block">
          <Buscador />
        </div>
        <button
          onclick="history.back()"
          class="lg:hidden bg-slate-200 rounded-md btn btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather-arrow-left feather"
          >
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
        </button>
      </div>
      <div class="navbar-end">
        <ul class="hidden md:flex md:gap-2 md:mr-2">
          {
            menu.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="hover:bg-sky-600 rounded-md hover:text-white uppercase transition-colors btn btn-ghost"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
        <a
          href="https://aulavirtualcenakin.com"
          class="bg-sky-600 hover:bg-sky-800 border-none rounded-md text-white hover:text-white uppercase transition-colors btn btn-primary"
          target="_blank">Aula Virtual</a
        >
      </div>
    </Container>
  </div>
</div>
