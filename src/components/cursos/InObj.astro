---
interface Props {
  incluye?: string;
  objetivos?: string;
}
const { incluye, objetivos } = Astro.props;
---

<div class="gap-4 grid grid-cols-1 md:grid-cols-2">
  {
    incluye && (
      <div class="col-span-1 bg-base-100 shadow-md rounded-md card">
        <div class="max-w-full card-body prose">
          <h3 class="mb-1 font-bold text-sky-600 text-4xl">Incluye</h3>
          <div set:html={incluye} />
        </div>
      </div>
    )
  }
  {
    objetivos && (
      <div class="col-span-1 bg-base-100 shadow-md rounded-md card">
        <div class="max-w-full card-body prose">
          <h3 class="mb-1 font-bold text-sky-600 text-4xl">Objetivos</h3>
          <div set:html={objetivos} />
        </div>
      </div>
    )
  }
</div>
