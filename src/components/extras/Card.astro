---
import { FileBadge, CalendarClock } from "lucide-astro";

interface Props {
  slug: string;
  title: string;
  horas?: string;
}

const { slug, title, horas } = Astro.props;
---

<li
  class="col-span-1 hover:shadow-lg border border-gray-100 rounded-md transition-shadow duration-300"
>
  <a
    href={`/cursos/${slug}`}
    class="bg-white p-0 rounded-md h-18 lg:h-32 list-row"
  >
    <div>
      <img
        class="rounded-tl-md rounded-bl-md w-24 lg:w-40 h-18 lg:h-32 object-cover"
        src={`https://cenakin.cl/images/cursos/${slug}/mini.webp`}
        alt={title}
      />
    </div>
    <div class="flex flex-col justify-around py-2 pr-2">
      <div class="font-bold lg:text-2xl line-clamp-2 leading-tight title">
        {title}
      </div>
      <div class="flex gap-1 lg:mt-2">
        <div
          class="flex items-center bg-sky-100 rounded-md text-sky-700 lg:text-xs badge"
        >
          <FileBadge color="oklch(58% 0.158 241.966)" size="12" />Curso
          Certificado
        </div>
        {
          horas && (
            <div class="flex items-center bg-sky-100 rounded-md text-sky-700 lg:text-xs badge">
              <CalendarClock color="oklch(58% 0.158 241.966)" size="12" />
              {horas} horas
            </div>
          )
        }
      </div>
    </div>
  </a>
</li>

<style>
  .title {
    font-family: "Roboto", sans-serif;
  }
  .badge {
    font-size: 10px;
  }

  @media (width > 1024px) {
    .badge {
      font-size: 14px;
    }
  }
</style>
